<form method="post" action="{{ path('ville_supprimer', {'id': ville.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette ville?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ville.id) }}">
    <button class="btn btn-outline-primary">Supprimer</button>
</form>
