<form method="post" action="{{ path('campus_supprimer', {'id': campus.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer le campus {{ campus.nom }}?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ campus.id) }}">
    <button class="button">Supprimer</button>
</form>
