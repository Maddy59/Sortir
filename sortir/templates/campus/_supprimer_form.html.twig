<form method="post" action="{{ path('campus_supprimer', {'id': campus.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer ce campus?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ campus.id) }}">
    <button class="btn btn-outline-primary">Supprimer</button>
</form>
