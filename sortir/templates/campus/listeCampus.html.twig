{% extends 'base.html.twig' %}

{% block body %}
<div class="container -md">
    <h1 class='text-center'>Gestion des campus</h1>
    <h3>Filtrer les campus</h3>
    <div class="container">
        Le nom contient:
        {{ form_start(formCampus) }}
        {{ form_widget(formCampus) }}
        <button>Rechercher</button>
        {{ form_end(formCampus) }}
    </div>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for campus in campus %}
            <tr>
               <td>{{ campus.nom }}</td>
                <td>
                   <a href="{{ path('campus_detail', {'id': campus.id}) }}">Supprimer</a>
                   <a href="{{ path('campus_modifier', {'id': campus.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de campus enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a href="{{ path('campus_ajouter') }}" class="btn btn-outline-primary">Ajouter un campus</a>
       </div>
    </div>
    <a href="{{ path('campus_lister') }}">Retour à la liste</a>
    </div>
{% endblock %}
