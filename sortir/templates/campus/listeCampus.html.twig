{% extends 'base.html.twig' %}

{% block body %}
<div class="container -md">
    <h1 class='text-center'>Gestion des campus</h1>
    <h3>Filtrer les campus</h3>
    <div class="container">
        Le nom contient:
        <div class="input-group">
            <input type="search" class="form-control rounded" placeholder="Campus" aria-label="Search"
                   aria-describedby="search-addon" />
            <button type="button" class="btn btn-outline-primary">Rechercher</button>
        </div>
    </div>
    <br>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for campus in campus %}
            <tr>
                <td>{{ campus.id }}</td>
                <td>{{ campus.nom }}</td>
                <td>
                   <a href="{{ path('campus_detail', {'id': campus.id}) }}">Détail</a>
                   <a href="{{ path('campus_modifier', {'id': campus.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de campus enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a href="{{ path('campus_ajouter') }}" class="btn btn-outline-primary">Ajouter un campus</a>
       </div>
{% endblock %}
